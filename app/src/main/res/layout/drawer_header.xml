<?xml version="1.0" encoding="utf-8"?>
<id.delta.bbm.ui.primer.PrimaryLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:gravity="bottom"
    android:orientation="vertical">

    <ImageView
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/delta_lock"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <LinearLayout
        android:padding="10dp"
        android:background="#80000000"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="DELTALABS"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="DELTA BBM Concept"/>
    </LinearLayout>

</id.delta.bbm.ui.primer.PrimaryLinearLayout>
